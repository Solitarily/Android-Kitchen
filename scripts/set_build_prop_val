#     我的新浪微博：      http://weibo.com/hqapk
#     我的腾讯微博：      http://t.qq.com/hqapkcom
#
############################################################################

#
#  提醒: 此脚本具有三个可选参数:
#
# $1 = build.prop 设置文件中的参数 (强制)
# $2 = 想要设置的参数值 (强制)
# $3 = 工作文件夹名称 (可选)
#

base_dir=`pwd`
return_val=0

if [ "$3" == "" ]
then
  cd WORKING_*
else
  cd $3
fi

if [ -e system/build.prop ]
then

  cd system

  if [ "`grep -m 1 $1= build.prop`" ]
  then

    echo " 设置 $1=$2 在 build.prop 文件中"
    sed -i -e 's/\('"$1"'=\).*$/\1'"$2"'/g' build.prop

  else
    echo " 云卓团队提醒: 在 build.prop 文件中未发现 $1 的参照，所以不会修改这个文件"
    return_val=1
  fi

else
  echo " 云卓团队警告: 未发现 build.prop 文件!"
  return_val=1
fi


cd $base_dir
exit $return_val

